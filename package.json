{
  "private": true,
  "author": "Ahmad Wafiq Amrillah",
  "license": "ISC",
  "productName": "Synchronize",
  "name": "msi_abas_synchronize",
  "version": "2.0.0",
  "description": "Data Synchronize from WHS-Portal to ABAS",
  "main": "main/index.js",
  "scripts": {
    "clean": "rimraf dist renderer/.next renderer/out",
    "start": "electron .",
    "build": "next build renderer && next export renderer",
    "pack-app": "npm run build && electron-builder --dir",
    "rebuild": "electron-rebuild",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ],
    "productName": "Synchronize",
    "appId": "mahsing.warehouse.Synchronize",
    "win": {
      "target": ["portable"]
    },
    "portable": {
      "artifactName": "whs-portal_synchronize_portable.exe"
    },
    "icon": "./renderer/public/icon.png"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "electron": "^22.0.0",
    "electron-builder": "^23.0.3",
    "electron-rebuild": "^3.2.9",
    "next": "latest",
    "postcss": "^8.4.20",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "mysql2": "^2.3.3",
    "sequelize": "^6.28.0",
    "winax": "^3.3.4"
  }
}
